@using System.Globalization
@inject IViewLocalizer _localizer
@inject IConfiguration _conf

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebUI.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #F3E3E2">
    <header id="header" class="header">
        <div style="margin-left: 0.75%">
            <select id="languageSelect" class="languageSelect" onchange="changeLanguage()">
                <option value="uk"
                        data-thumbnail="https://upload.wikimedia.org/wikipedia/commons/thumb/4/49/Flag_of_Ukraine.svg/125px-Flag_of_Ukraine.svg.png">@_localizer["Ukrainian"]</option>
                <option value="en"
                        data-thumbnail="https://upload.wikimedia.org/wikipedia/en/thumb/a/ae/Flag_of_the_United_Kingdom.svg/120px-Flag_of_the_United_Kingdom.svg.png">@_localizer["English"]</option>
            </select>

            <div>
                <button id="languageSelectButton" class="languageSelectButton" value=""></button>
                <div id="b">
                    <ul id="a">
                    </ul>
                </div>
            </div>
        </div>
        <div style="margin-right: 0.75%">
            @if (User.IsInRole("Admin"))
            {
                <button class="btn btn-dark" onclick="@("window.location.href='" + Url.Action("Index", "AdminPanel") + "'")">@_localizer["AdminPanel"]</button>
                <button class="btn btn-dark" onclick="@($"window.location.href='{_conf["SecurityAPIUrl"]}/{CultureInfo.CurrentCulture}/Auth/Logout'")">@_localizer["Logout"]</button>
            }
            else if (User.IsInRole("User"))
            {
                <button class="btn btn-dark" onclick="@($"window.location.href='{_conf["SecurityAPIUrl"]}/{CultureInfo.CurrentCulture}/Auth/Logout'")">@_localizer["Logout"]</button>
            }
            else
            {
                <button class="btn btn-dark" onclick="@("window.location.href='" + Url.Action("LoginPoint", "Redirect") + "'")">@_localizer["Login"]</button>
                <button class="btn btn-dark" onclick="@($"window.location.href='/{CultureInfo.CurrentCulture}/User/Register'")">@_localizer["Register"]</button>
            }
        </div>
    </header>

    <div id="main" class="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="myFooter">
        <div class="adsholer">
            <a target=”_blank” href="https://www.instagram.com/capitan_soap/">
                <img class="adsimg" src="https://www.pngmart.com/files/21/Instagram-Logo-PNG-Transparent.png" />
            </a>
            <a target=”_blank” href="https://t.me/johnburitto">
                <img class="adsimg" src="https://upload.wikimedia.org/wikipedia/commons/8/83/Telegram_2019_Logo.svg" />
            </a>
        </div>
        <div class="companyfootertexthandler">
            <span class="companyfootertext">RailwayTicketsSystem - @DateTime.Today.Year</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/languageservice.js"></script>
    <script>loadLanguageFromLocalStorage("language");</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

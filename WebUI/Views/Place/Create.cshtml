﻿@{
    ViewData["Title"] = "Створити місце";
}
@model PlaceCreateDto

<div class="formhandler">
    <div class="formheader">
        <span>Форма створення місця</span>
    </div>

    <form class="form" method="post" asp-controller="Place" asp-action="CreateAction">
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="Price">Ціна</label>
            <input class="forminput" asp-for="Price" />
            <span class="frominputerrorhandler" asp-validation-for="Price"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="PlaceType"> Тип</label>
            <select class="forminput" asp-for="PlaceType" asp-items="Html.GetEnumSelectList<PlaceType>()"></select>
            <span class="frominputerrorhandler" asp-validation-for="PlaceType"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" style="border-right: 2px solid black;" asp-for="IsAvaliable">Доступність</label>
            <input class="forminput" asp-for="IsAvaliable" />
            <span class="frominputerrorhandler" asp-validation-for="IsAvaliable"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="TrainCarId">Id вагона</label>
            <input class="forminput" asp-for="TrainCarId" />
            <span class="frominputerrorhandler" asp-validation-for="TrainCarId"></span>
        </div>
        <input class="btn btn-success forminputbutton" type="submit" value="Створити" />
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

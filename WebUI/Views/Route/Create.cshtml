﻿@{
    ViewData["Title"] = "Створити маршрут";
}
@model RouteCreateDto
@inject IViewLocalizer _localizer

<div class="formhandler">
    <div class="formheader">
        <span>@_localizer["FormName"]</span>
    </div>

    <form class="form" method="post" asp-controller="Route" asp-action="CreateAction">
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="DepartureTime">@_localizer["DepartureTime"]</label>
            <input class="forminput" type="datetime-local" asp-for="DepartureTime">
            <span class="frominputerrorhandler" asp-validation-for="DepartureTime"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="ArrivalTime">@_localizer["ArrivalTime"]</label>
            <input class="forminput" type="datetime-local" asp-for="ArrivalTime">
            <span class="frominputerrorhandler" asp-validation-for="ArrivalTime"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="FromCity">@_localizer["FromCity"]</label>
            <input class="forminput" asp-for="FromCity">
            <span class="frominputerrorhandler" asp-validation-for="FromCity"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="ToCity">@_localizer["ToCity"]</label>
            <input class="forminput" asp-for="ToCity">
            <span class="frominputerrorhandler" asp-validation-for="ToCity"></span>
        </div>

        <input class="btn btn-success forminputbutton" type="submit" value="@_localizer["Button"]">
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

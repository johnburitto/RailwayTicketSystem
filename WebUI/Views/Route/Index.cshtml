﻿@{
    ViewData["Title"] = "Маршрути";
}
@model RawDataModel<Route>

<div>
    <button class="btn btn-success btn-lg btn-block" onclick="@("window.location.href='" + Url.Action("Create", "Route") + "'")">Створити</button>

    <table class="table" style="align-content: center; text-align: center; vertical-align: middle;">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Час відправлення</th>
                <th>Час прибуття</th>
                <th>З</th>
                <th>В</th>
                <th>Час в дорозі</th>
                <th>Змінено</th>
                <th>Створно</th>
                <th>Редаговано</th>
                <th>Редагувати</th>
                <th>Видалити</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var el in Model.Data)
            {
                <tr>
                    <td>@el.Id</td>
                    <td>@el.DepartureTime</td>
                    <td>@el.ArrivalTime</td>
                    <td>@el.FromCity</td>
                    <td>@el.ToCity</td>
                    <td>@el.TravelTime</td>
                    <td>@el.ActionUser</td>
                    <td>@el.CreatedAt</td>
                    <td>@el.UpdatedAt</td>
                    <td>
                        <button class="btn btn-warning"
                                onclick="@("window.location.href='" + Url.Action("Update", "Route") + $"/{el.Id}'")">Редагувати</button>
                    </td>
                    <td>
                        <button class="btn btn-danger" 
                                onclick="@("window.location.href='" + Url.Action("Delete", "Route") + $"/{el.Id}'")">Видалити</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
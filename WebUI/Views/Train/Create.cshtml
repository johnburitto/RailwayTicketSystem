﻿@{
    ViewData["Title"] = @_localizer["Title"];
}
@model TrainCreateDto
@inject IViewLocalizer _localizer

<div class="formhandler">
    <div class="formheader">
        <span>@_localizer["FormName"]</span>
    </div>
    
    <form class="form" method="post" asp-controller="Train" asp-action="CreateAction">
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="Number">@_localizer["Number"]</label>
            <input class="forminput" asp-for="Number" />
            <span class="frominputerrorhandler" asp-validation-for="Number"></span>
        </div>
        <div class="forminputhandler">
            <label class="forminputlabel" asp-for="RouteId">@_localizer["RouteId"]</label>
            <input class="forminput" asp-for="RouteId" />
            <span class="frominputerrorhandler" asp-validation-for="RouteId"></span>
        </div>
        <input class="btn btn-success forminputbutton" type="submit" value="@_localizer["Button"]" />
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
